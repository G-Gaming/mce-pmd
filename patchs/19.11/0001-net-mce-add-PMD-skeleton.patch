From 2dc0a1292e3516ed3f063d51830ded952db8914d Mon Sep 17 00:00:00 2001
From: Wenbo Cao <caowenbo@mucse.com>
Date: Wed, 13 Aug 2025 14:35:05 +0800
Subject: [PATCH] mce driver init and enable build option for mce pmd

Signed-off-by: Wenbo Cao <caowenbo@mucse.com>
---
 config/common_linux     | 2 ++
 drivers/net/Makefile    | 1 +
 drivers/net/meson.build | 1 +
 mk/rte.app.mk           | 2 ++
 4 files changed, 6 insertions(+)

diff --git a/config/common_linux b/config/common_linux
index c5cf3d6628..7c2015369e 100644
--- a/config/common_linux
+++ b/config/common_linux
@@ -74,3 +74,5 @@ CONFIG_RTE_LIBRTE_HNS3_PMD=y
 # To compile, CONFIG_RTE_EAL_VFIO should be enabled.
 #
 CONFIG_RTE_LIBRTE_PMD_IFPGA_RAWDEV=n
+
+CONFIG_RTE_LIBRTE_MCE_PMD=y
diff --git a/drivers/net/Makefile b/drivers/net/Makefile
index cee30367a1..9041083c8f 100644
--- a/drivers/net/Makefile
+++ b/drivers/net/Makefile
@@ -60,6 +60,7 @@ DIRS-$(CONFIG_RTE_LIBRTE_THUNDERX_NICVF_PMD) += thunderx
 DIRS-$(CONFIG_RTE_LIBRTE_VDEV_NETVSC_PMD) += vdev_netvsc
 DIRS-$(CONFIG_RTE_LIBRTE_VIRTIO_PMD) += virtio
 DIRS-$(CONFIG_RTE_LIBRTE_VMXNET3_PMD) += vmxnet3
+DIRS-$(CONFIG_RTE_LIBRTE_MCE_PMD) += mce
 
 ifeq ($(CONFIG_RTE_LIBRTE_KNI),y)
 DIRS-$(CONFIG_RTE_LIBRTE_PMD_KNI) += kni
diff --git a/drivers/net/meson.build b/drivers/net/meson.build
index c300afb911..66c707c90c 100644
--- a/drivers/net/meson.build
+++ b/drivers/net/meson.build
@@ -41,6 +41,7 @@ drivers = ['af_packet',
 	'pfe',
 	'qede',
 	'ring',
+        'mce',
 	'sfc',
 	'softnic',
 	'szedata2',
diff --git a/mk/rte.app.mk b/mk/rte.app.mk
index 05ea034b99..76326d4661 100644
--- a/mk/rte.app.mk
+++ b/mk/rte.app.mk
@@ -233,6 +233,8 @@ _LDLIBS-$(CONFIG_RTE_LIBRTE_VMXNET3_PMD)    += -lrte_pmd_vmxnet3_uio
 _LDLIBS-$(CONFIG_RTE_LIBRTE_VMBUS)          += -lrte_bus_vmbus
 _LDLIBS-$(CONFIG_RTE_LIBRTE_NETVSC_PMD)     += -lrte_pmd_netvsc
 
+_LDLIBS-$(CONFIG_RTE_LIBRTE_MCE_PMD) += -lrte_pmd_mce
+
 ifeq ($(CONFIG_RTE_LIBRTE_BBDEV),y)
 _LDLIBS-$(CONFIG_RTE_LIBRTE_PMD_BBDEV_NULL)     += -lrte_pmd_bbdev_null
 _LDLIBS-$(CONFIG_RTE_LIBRTE_PMD_BBDEV_FPGA_LTE_FEC) += -lrte_pmd_bbdev_fpga_lte_fec
